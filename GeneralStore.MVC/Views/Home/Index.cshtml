@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Store</h1>
    <p class="lead">
        Our General Store, located in rural Indiana, is host to a multitude of fine food and items of distinction.<br />
        Come browse our products and see what we have for you.
    </p>
    @Html.ActionLink("Learn More About Us", "About")
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Our General Store, located in rural Indiana, is host to a multitude of fine food and items of distinction.<br />
            Come browse our products and see what we have for you
        </p>
        @Html.ActionLink("Check Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>Check to see if you are already a customer.  If you are not, you can add your self so you can started ordering products!</p>
        @Html.ActionLink("Check Customers", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <div class="col-md-4">
        <h2>Transactions</h2>
        <p>A customer can create an order and view all their orders</p>
        @Html.ActionLink("Check Customer Transaction", "Index", "Transaction", null, new {@class="btn btn-primary btn-large"})
    </div>
</div>